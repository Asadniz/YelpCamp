<% layout('layouts/boilerplate') %>
    <script>
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %> };
    </script>
    <link rel="stylesheet" href="/css/index.css">
    <div id="cluster-map" class="w-75 mx-auto"></div>
    <div class='d-flex flex-column justify-content-center align-items-center'>
        <h1 class='text-center my-5'>YelpCamp</h1>
        <div class="mb-3">
            <form class='form' action="/campgrounds/new" method="get">
                <button class='btn btn-primary'>Make new campground</button>
            </form>
        </div>
    </div>
    <div>
        <% for (let campground of campgrounds) { %>
            <div class='card m-auto w-75 h-50' onclick="window.location='/campgrounds/<%= campground._id %>'">
                <div class="row">
                    <% if (campground.image[0].url) { %>
                        <div class="col-md-4">
                            <img class='img-fluid' src="<%=campground.image[0].url%>" alt="">
                        </div>
                        <% } %>
                            <div class="col-md-8" id='item'>
                                <div class="card-body">
                                    <div class="card-title">
                                        <%=campground.title%>
                                    </div>
                                    <p class='card-text text-muted'>By <%=campground.author.username%>
                                    </p>
                                    <p class="card-text">
                                        <%=campground.description%>
                                    </p>
                                    <div class="small text-muted">
                                        <%=campground.geometry.place%>
                                    </div>
                                </div>
                            </div>
                </div>

            </div>
            <% } %>


    </div>
    <script src="/js/clusterMap.js"></script>