<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/index.css">
    <div class='d-flex flex-column justify-content-center align-items-center'>
        <h1 class='text-center mb-5'>YelpCamp</h1>
        <div class="mb-3">
            <form class='form' action="/campgrounds/new" method="get">
                <button class='btn btn-primary'>Make new campground</button>
            </form>
        </div>
    </div>
    <ul>
        <% for (let campground of campgrounds) { %>
            <div class='card' mb-3 onclick="window.location='/campgrounds/<%= campground._id %>'">
                <div class="row">
                    <div class="col-md-4">
                        <img class='img-fluid' src="<%=campground.image%>" alt="">
                    </div>
                    <div class="col-md-8" id='item'>
                        <div class="card-body">
                            <div class="card-title">
                                <%=campground.title%>
                            </div>
                            <p class='card-text text-muted'>By <%=campground.author.username%>
                            </p>
                            <p class="card-text">
                                <%=campground.description%>
                            </p>
                            <div class="small text-muted">
                                <%=campground.location%>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <% } %>


    </ul>